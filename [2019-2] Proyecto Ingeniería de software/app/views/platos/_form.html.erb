
<%= simple_form_for(@plato) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
    <%= f.input :cantidad_personas_sugeridas %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-outline-dark my-2 my-sm-0"%>
  </div>
<% end %>
