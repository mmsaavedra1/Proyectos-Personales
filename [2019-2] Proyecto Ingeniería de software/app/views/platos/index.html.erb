<!-- Solamente el administrador tiene el privilegio de ver esto -->
<% if user_signed_in? %>
  <% if current_user.email == "adming@uc.cl" %>
    <p id="notice"><%= notice %></p>

    <h1>Platos</h1>

    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripcion</th>
          <th>Cantidad personas sugeridas</th>
          <th>Valoracion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @platos.each do |plato| %>
          <tr>
            <td><%= plato.nombre %></td>
            <td><%= plato.descripcion %></td>
            <td><%= plato.cantidad_personas_sugeridas %></td>
            <td><%= plato.valoracion %></td>
            <td><%= link_to 'Destroy', plato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

<!-- Si no es admin, se redirige a la pagina principal -->
  <% else %>
    <%= render 'permisoDenegado' %>
  <% end %>
<% else %>
  <%= render 'permisoDenegado' %>
<% end %>

