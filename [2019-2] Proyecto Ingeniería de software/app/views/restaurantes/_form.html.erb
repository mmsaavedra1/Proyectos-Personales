
<%= simple_form_for(@restaurante) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <br>
    <%= f.file_field :restaurante_img %>
    <%= f.input :nombre %>
    <%= f.input :correo %>
    <%= f.input :direccion %>
    <%= f.input :numero_telefono %>
  </div>

  <div class="form-actions">
    <%= f.button :submit , class:"btn btn-outline-dark my-2 my-sm-0"%>

    <% if params[:action] == "new" %>
      <%= link_to 'Back', restaurantes_path, class: "btn btn-outline-dark" %>
    <%elsif params[:action] == "edit"%>
      <%= link_to 'Back', restaurante_path(params[:id]), class: "btn btn-outline-dark"  %>
    <%end %>
  </div>
<% end %>
